@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html, body, #root { height: 100% }
  body { @apply bg-slate-50 text-slate-900 antialiased }
}

@layer components {
  .btn { @apply px-4 py-2 rounded-lg font-medium shadow-sm bg-brand-500 text-white hover:bg-brand-600 }
  .card { @apply bg-white rounded-2xl p-4 shadow-lg }
  .input { @apply w-full p-3 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-200 }
  .badge-pending { @apply px-2 py-1 rounded-full text-xs bg-yellow-100 text-yellow-800 }
  .badge-completed { @apply px-2 py-1 rounded-full text-xs bg-emerald-100 text-emerald-700 }
}
